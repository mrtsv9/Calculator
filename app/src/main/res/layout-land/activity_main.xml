<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="16dp"
        android:text="Input"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCBCBC"
        app:layout_constraintTop_toBottomOf="@id/tv_input"
        app:layout_constraintBottom_toTopOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="16dp"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_clear"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_grey"
        android:text="AC"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_seven"
        app:layout_constraintStart_toStartOf="@+id/btn_seven" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete_one"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_grey"
        android:text="clr"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="@+id/btn_eight" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_percent"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_grey"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="@+id/btn_nine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_divide"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_orange"
        android:text="รท"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="@+id/btn_multiply"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_seven"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="@+id/btn_four" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_eight"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_seven"
        app:layout_constraintStart_toStartOf="@+id/btn_five" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_nine"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eight"
        app:layout_constraintStart_toStartOf="@+id/btn_six" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_four"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_one"
        app:layout_constraintStart_toStartOf="@+id/btn_zero" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_five"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="@+id/btn_two" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_six"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="@+id/btn_three" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_one"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_zero"
        app:layout_constraintStart_toStartOf="@+id/btn_zero" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_two"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginLeft="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintStart_toEndOf="@+id/btn_one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_three"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="22dp"

        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toEndOf="@+id/btn_dot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_zero"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_dark_grey"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginRight="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_dot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dot"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="."
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginRight="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_zero"
        app:layout_constraintEnd_toStartOf="@+id/btn_equals" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_multiply"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_orange"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_nine"
        app:layout_constraintStart_toStartOf="@+id/btn_minus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_minus"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_orange"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="@+id/btn_plus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_orange"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toEndOf="@+id/btn_equals" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_equals"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_orange"
        android:text="="
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_zero"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bracket_close"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text=")"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bracket_open"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="("
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_close" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sin"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="sin"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bracket_close"
        app:layout_constraintTop_toTopOf="@+id/btn_seven" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cos"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="cos"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bracket_close"
        app:layout_constraintTop_toTopOf="@+id/btn_four" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tg"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="tan"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bracket_close"
        app:layout_constraintTop_toTopOf="@+id/btn_one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_log"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="log"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bracket_close"
        app:layout_constraintTop_toTopOf="@+id/btn_zero" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pov"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="^"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_sin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sqrt"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="โ"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_cos" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_e"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="e"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_tg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pi"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:background="@drawable/button_dark_grey"
        android:text="pi"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_log" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fact"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="FACT"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_open" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_asin"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="ASIN"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_pov" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_acos"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="acos"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_sqrt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_atg"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="atg"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_e" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_log10"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_dark_grey"
        android:text="log10"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_bracket_open"
        app:layout_constraintTop_toTopOf="@+id/btn_pi" />

</androidx.constraintlayout.widget.ConstraintLayout>